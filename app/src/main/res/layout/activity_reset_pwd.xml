<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white2"
              android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/reset_pwd_titleBar"
        android:background="@color/blue_2196F3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/reset_btn_back"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_gravity="center_vertical"
            android:layout_marginVertical="@dimen/dp_20"
            android:layout_marginStart="20dp"
            android:src="@mipmap/back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:text="找回密码"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:id="@+id/mLL_Mobile"
        style="@style/style_item_center">

        <TextView
            style="@style/style_item_text"
            android:layout_width="74dp"
            android:layout_marginRight="0dp"
            android:gravity="center"
            android:text="邮箱"/>

        <EditText
            android:id="@+id/reset_pwd_phone"
            style="@style/style_edittext_email_number"
            android:layout_marginLeft="0dp"
            android:hint="请输入已经绑定的邮箱号码"
            android:textCursorDrawable="@null"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFFFFFFF"
        android:gravity="right|center_vertical"
        android:orientation="horizontal"
        android:weightSum="8">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6.5"
            android:background="@color/white2"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/reset_pwd_code_layout"
        style="@style/style_item_center">

        <TextView
            style="@style/style_item_text"
            android:layout_width="74dp"
            android:layout_marginRight="0dp"
            android:gravity="center"
            android:text="验证码"/>

        <EditText
            android:id="@+id/reset_pwd_code"
            style="@style/style_edittext_number"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1.0"
            android:hint="请输入验证码"
            android:textCursorDrawable="@null"/>

        <Button
            android:id="@+id/reset_pwd_get_code"
            android:layout_width="98dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/reset_pwd_btn_bg"
            android:text="获取验证码"
            android:textColor="@android:color/white"
            android:textSize="14sp"/>

        <!--         android:layout_weight="0.9" -->
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#9898"/>

    <LinearLayout
        android:id="@+id/reset_pwd_pwd1_layout"
        style="@style/style_item_center">

        <EditText
            android:id="@+id/reset_pwd_pwd1"
            style="@style/style_edittext_password"
            android:hint="新密码（6位以上）"
            android:imeOptions="actionNext"
            android:textCursorDrawable="@null"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFFFFFFF"
        android:gravity="right|center_vertical"
        android:orientation="horizontal"
        android:weightSum="8">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6.5"
            android:background="@color/white2"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/reset_pwd_pwd2_layout"
        style="@style/style_item_center">

        <EditText
            android:id="@+id/reset_pwd_pwd2"
            style="@style/style_edittext_password"
            android:hint="确认密码"
            android:imeOptions="actionDone"
            android:textCursorDrawable="@null"/>
    </LinearLayout>


    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/reset_location"/>

    <Button
        android:tag="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_gravity="center"
        android:textSize="26dp"
        android:textColor="@color/blue_2196F3"
        android:text="重置密码"
        android:id="@+id/reset_pwd_title_commit"/>

</LinearLayout>
